# ==============================================
# QUIKPAY PROJECT ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# BLOCKCHAIN CONFIGURATION
# ==============================================

# Private key for deployment (WITHOUT 0x prefix)
# ⚠️  CRITICAL: Keep this secret and secure!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Arbitrum Sepolia Testnet RPC URLs
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_SEPOLIA_RPC_URL_BACKUP=https://sepolia.arbitrum.io/rpc

# Arbitrum One Mainnet RPC URLs (for future use)
ARBITRUM_ONE_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_ONE_RPC_URL_BACKUP=https://arbitrum.llamarpc.com

# ==============================================
# CONTRACT ADDRESSES
# ==============================================

# Deployed QuikPay contract address on Arbitrum Sepolia
QUIKPAY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ==============================================
# EXPLORER & VERIFICATION
# ==============================================

# Arbiscan API Key (Arbitrum Sepolia/One) for verification
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Arbiscan explorer URLs
ARBITRUM_SEPOLIA_EXPLORER_URL=https://sepolia.arbiscan.io
ARBITRUM_ONE_EXPLORER_URL=https://arbiscan.io

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Web app configuration
NEXT_PUBLIC_CHAIN_ID=421614
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Pimlico AA (Arbitrum Sepolia)
# ERC-4337 gasless flow. Set both to true to enable on server and client.
USE_PIMLICO=true
# Client AA path
NEXT_PUBLIC_USE_PIMLICO=true
PIMLICO_API_KEY=your_pimlico_api_key_here
PIMLICO_BUNDLER_URL=https://api.pimlico.io/v2/421614/rpc?apikey=${PIMLICO_API_KEY}
PIMLICO_PAYMASTER_URL=https://api.pimlico.io/v2/421614/rpc?apikey=${PIMLICO_API_KEY}

# Client-readable Pimlico URLs (frontend AA)
NEXT_PUBLIC_PIMLICO_BUNDLER_URL=https://api.pimlico.io/v2/421614/rpc?apikey=${PIMLICO_API_KEY}
NEXT_PUBLIC_PIMLICO_PAYMASTER_URL=https://api.pimlico.io/v2/421614/rpc?apikey=${PIMLICO_API_KEY}

# Optional: Frontend RPC URL override used by viem/wagmi
RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Gas settings for deployment
GAS_LIMIT=2000000
MAX_FEE_PER_GAS=20000000000
MAX_PRIORITY_FEE_PER_GAS=1000000000

# Test account addresses (optional)
TEST_ACCOUNT_1=0x...
TEST_ACCOUNT_2=0x...

# ==============================================
# OPTIONAL SERVICES
# ==============================================

# Alchemy API Key (alternative RPC provider)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Key (alternative RPC provider)
INFURA_API_KEY=your_infura_api_key_here

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
